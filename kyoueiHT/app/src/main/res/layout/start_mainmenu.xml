<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/main_menu"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:background="#A0BDE0"
        android:text=" メインメニュー"
        android:textSize="20pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nyuuko"
        android:layout_width="355dp"
        android:layout_height="84dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/kadomaru"
        android:text="     1:入庫"
        android:textAlignment="viewStart"
        android:textSize="18pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_menu" />

    <Button
        android:id="@+id/syukko"
        android:layout_width="355dp"
        android:layout_height="84dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/kadomaru"
        android:text="     2:出庫"
        android:textAlignment="textStart"
        android:textSize="18pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nyuuko" />

    <Button
        android:id="@+id/in_move"
        android:layout_width="355dp"
        android:layout_height="84dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/kadomaru"
        android:text="     3:在庫移動"
        android:textAlignment="textStart"
        android:textSize="18pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/syukko" />

    <Button
        android:id="@+id/inventory"
        android:layout_width="355dp"
        android:layout_height="84dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/kadomaru"
        android:text="     4:棚卸"
        android:textAlignment="textStart"
        android:textSize="18pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/in_move" />

    <Button
        android:id="@+id/stok"
        android:layout_width="355dp"
        android:layout_height="84dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/kadomaru"
        android:text="     5:在庫参照"
        android:textAlignment="textStart"
        android:textSize="18pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inventory" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="120dp"
        android:layout_height="78dp"
        android:backgroundTint="#A0BDE0"
        android:text="戻る"
        android:textSize="20pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/qr"
        android:layout_width="180dp"
        android:layout_height="84dp"
        android:background="@drawable/kadomaru"
        android:text="     QR読み込み"
        android:textAlignment="viewStart"
        android:textSize="10pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back_btn"
        app:layout_constraintTop_toBottomOf="@+id/stok" />

</androidx.constraintlayout.widget.ConstraintLayout>