<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/title"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:background="#A0BDE6"
        android:text=" 棚入れ商品決定"
        android:textSize="20pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#A0BDE6"
        android:text="戻る"
        android:textSize="20pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:backgroundTint="#A0BDE6"
        android:text="次へ"
        android:textSize="20pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back_btn" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="384dp"
        android:layout_height="320dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/kurobuti"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_number">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/check_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/input_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="入庫予定No"
        android:textSize="18pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/input_number"
        android:layout_width="352dp"
        android:layout_height="57dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="123456789"
        android:textSize="18pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_number_text" />

    <TextView
        android:id="@+id/zumi2"
        android:layout_width="83dp"
        android:layout_height="60dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/kurobuti2"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="16pt"
        app:layout_constraintStart_toEndOf="@+id/zumi1"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

    <TextView
        android:id="@+id/plan1"
        android:layout_width="83dp"
        android:layout_height="60dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/kurobuti2"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="16pt"
        app:layout_constraintStart_toEndOf="@+id/sura"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

    <TextView
        android:id="@+id/plan2"
        android:layout_width="83dp"
        android:layout_height="60dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/kurobuti2"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="16pt"
        app:layout_constraintStart_toEndOf="@+id/plan1"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

    <TextView
        android:id="@+id/sura"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="40dp"
        android:text="/"
        android:textSize="18pt"
        app:layout_constraintStart_toEndOf="@+id/zumi2"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

    <TextView
        android:id="@+id/zumi1"
        android:layout_width="83dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/kurobuti2"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="16pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

</androidx.constraintlayout.widget.ConstraintLayout>